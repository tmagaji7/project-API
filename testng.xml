<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="API Test Suite" verbose="1">
    
    <!-- Suite-level parameters -->
    <parameter name="environment" value="qa"/>
    
    <!-- Smoke Tests - Run first, critical functionality -->
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.booker.api.tests.PostCrudTest"/>
            <class name="com.booker.api.tests.UserCrudTest"/>
        </classes>
    </test>
    
    <!-- Regression Tests - Full suite -->
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.booker.api.tests.PostCrudTest"/>
            <class name="com.booker.api.tests.PostNegativeTest"/>
            <class name="com.booker.api.tests.UserCrudTest"/>
            <class name="com.booker.api.tests.UserNegativeTest"/>
        </classes>
    </test>
    
    <!-- All Tests - Complete run -->
    <test name="All Tests">
        <classes>
            <class name="com.booker.api.tests.PostCrudTest"/>
            <class name="com.booker.api.tests.PostNegativeTest"/>
            <class name="com.booker.api.tests.UserCrudTest"/>
            <class name="com.booker.api.tests.UserNegativeTest"/>
        </classes>
    </test>
    
</suite>
